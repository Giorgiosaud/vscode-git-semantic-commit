{
  "name": "git-semantic-commit",
  "displayName": "Git - Semantic Commit",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.38.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:gitSemanticCommit.semanticCommit"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Git - Semantic Commit Message",
      "properties": {
        "gitSemanticCommit.commitOptions": {
          "type": "string",
          "default": "--quiet",
          "markdownDescription": "Specifies which [arguments](https://git-scm.com/docs/git-commit#_options) to be passed when the commit is executed."
        },
        "gitSemanticCommit.preserveScope": {
          "type": "boolean",
          "default": "false",
          "markdownDescription": "Determines whether to preserve the last message scope that was inserted."
        },
        "gitSemanticCommit.stageAll": {
          "type": "boolean",
          "default": "true",
          "markdownDescription": "Determines whether to stage all changes before the commit, in case the staging area (index) is empty."
        },
        "gitSemanticCommit.types": {
          "type": "array",
          "default": [
            "chore",
            "docs",
            "feat",
            "fix",
            "refactor",
            "style",
            "test"
          ],
          "items": {
            "type": "string"
          },
          "minItems": 1,
          "uniqueItems": true,
          "markdownDescription": "Specifies the supported message types."
        }
      }
    },
    "commands": [
      {
        "command": "gitSemanticCommit.semanticCommit",
        "title": "Semantic Commit",
        "icon": {
          "dark": "images/navigation/dark-icon.svg",
          "light": "images/navigation/light-icon.svg"
        }
      }
    ],
    "menus": {
      "scm/title": [
        {
          "when": "scmProvider == git",
          "command": "gitSemanticCommit.semanticCommit",
          "title": "Semantic Commit",
          "group": "navigation"
        },
        {
          "when": "scmProvider == git",
          "command": "gitSemanticCommit.semanticCommit",
          "title": "Semantic Commit",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^5.2.6",
    "@types/node": "^10.12.21",
    "@types/vscode": "^1.38.0",
    "glob": "^7.1.4",
    "mocha": "^6.1.4",
    "tslint": "^5.12.1",
    "typescript": "^3.3.1",
    "vscode-test": "^1.2.0"
  },
  "dependencies": {}
}
